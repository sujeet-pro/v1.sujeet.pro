---
import { getCollection } from "astro:content";
import Layout from "../../layouts/base/base.astro";
import Card from "../../components/card.astro";

const entries = await getCollection("project");
const title = "Sujeet's Projects";
---

<Layout title="Sujeet's Projects" navType="project">
  <main>
    <h1 class="text-5xl text-center my-8">{title}</h1>
    <ul class="max-w-prose mx-auto">
      {
        entries.map(({ slug, data: { title, description, heroImg } }) => (
          <Card
            title={title}
            description={description}
            imgSrc={heroImg}
            href={`/project/${slug}`}
          />
        ))
      }
    </ul>
  </main>
</Layout>
