---
import Layout from "../layouts/layout.astro";
import Link from "../components/link.astro";
import { siteHome } from "../constants/link-site";

const title = "Page Not Found";
const description = "The page you are looking for doesn't exits.";
---

<Layout
  article={false}
  title={title}
  description={description}
  image={null}
  pageDetails={{ type: "site" }}
  class="flex flex-col gap-20 my-24"
>
  <section class="flex flex-col gap-10 text-center">
    <h1 class="text-9xl">Oops!</h1>
    <p class="text-4xl">404 - Page Not found</p>
    <div>
      <Link skin="cta" config={siteHome}>
        Visit {siteHome.text} Page
      </Link>
    </div>
  </section>
</Layout>
