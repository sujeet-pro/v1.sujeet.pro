---
import { getCollection } from "astro:content";
import Layout from "../../layouts/blog.astro";

const entries = await getCollection("blog");
---

<Layout title="Sujeet's Blog">
  <h1>Sujeet's Blog</h1>
  <ul>
    {
      entries.map((entry) => (
        <li>
          <a href={`/blog/${entry.slug}`}>{entry.data.title}</a>
        </li>
      ))
    }
  </ul>
</Layout>
